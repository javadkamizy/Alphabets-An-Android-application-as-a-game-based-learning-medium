<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/trial1"/>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:background="@drawable/rainbow"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="160dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:id="@+id/displayImage1"
        android:contentDescription="@string/app_name"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/displayImage2"
        android:layout_gravity="top"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/app_name"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/displayImage3"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/app_name"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/displayImage4"
        android:layout_gravity="bottom"
        android:layout_marginLeft="205dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/app_name"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/displayImage5"
        android:layout_gravity="bottom"
        android:layout_marginLeft="358dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/app_name"
        />

</FrameLayout>